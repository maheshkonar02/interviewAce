# Backend Environment Variables
# Copy this to backend/.env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/interviewace
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/interviewace

# Security
JWT_SECRET=change_this_to_a_very_secure_random_string

# File Upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info

# AI Service API Keys (at least one recommended)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=
GROQ_API_KEY=
